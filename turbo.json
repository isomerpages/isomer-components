{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env", "tsconfig.json"],
  "pipeline": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "clean": {},
    "dev": {
      "dependsOn": ["db:setup"],
      "cache": false,
      "persistent": true
    },
    "db:setup": { "cache": false },
    "setup:test": {},
    "storybook": {
      "cache": false
    },
    "storybook:build": {
      "inputs": ["!storybook-static/**"],
      "outputs": ["storybook-static/**"]
    },
    "teardown": {},
    "test-start": {}
  }
}
