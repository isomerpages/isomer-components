{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env",
    "tsconfig.json"
  ],
  "globalEnv": [
    "NODE_ENV"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "env": [
        "DATABASE_URL"
      ]
    },
    "clean": {},
    "dev": {
      "dependsOn": [
        "db:setup"
      ],
      "env": [
        "DATABASE_URL"
      ],
      "cache": false,
      "persistent": true
    },
    "db:setup": {
      "cache": false,
      "env": [
        "DATABASE_URL"
      ]
    },
    "setup:test": {},
    "storybook": {
      "cache": false
    },
    "storybook:build": {
      "inputs": [
        "!storybook-static/**"
      ],
      "outputs": [
        "storybook-static/**"
      ]
    },
    "teardown": {},
    "test-start": {
      "env": [
        "DATABASE_URL"
      ]
    }
  }
}
