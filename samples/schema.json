{
  "title": "Page",
  "type": "object",
  "required": ["version", "page", "content"],
  "properties": {
    "version": {
      "type": "string",
      "description": "The version of the Isomer Next schema to use",
      "default": "0.10.0"
    },
    "page": {
      "type": "object",
      "required": ["layout"],
      "properties": {
        "layout": {
          "type": "string",
          "description": "The layout of the page to use",
          "enum": ["homepage", "content"]
        },
        "title": {
          "type": "string",
          "description": "The title of the page"
        },
        "description": {
          "type": "string",
          "description": "The summary of the page for SEO purposes"
        },
        "noIndex": {
          "type": "boolean",
          "description": "Whether to exclude the page from search results"
        }
      }
    },
    "content": {
      "type": "array",
      "title": "Page content",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "required": ["type"],
            "properties": {
              "type": "string",
              "enum": [
                "button",
                "callout",
                "cards",
                "contentpageheader",
                "footer",
                "header",
                "image",
                "infobar",
                "infocards",
                "infocols",
                "infopic",
                "keystatistics",
                "masthead",
                "paragraph",
                "search",
                "sidepane"
              ]
            }
          }
        ]
      }
    }
  }
}
